{
  "name": "storytellers-domain",
  "version": "0.1.0",
  "main": "./out/main/index.js",
  "description": "Ambience dashboard for TTRPG GMs",
  "author": "Odin94",
  "license": "GPL-3.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.45.1",
    "electron-updater": "^6.3.9",
    "framer-motion": "^11.11.0",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.8",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^5.0.0",
    "node-gyp": "^12.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.6.0",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.storytellers.domain",
    "productName": "Storyteller's Domain",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**",
      "node_modules/**"
    ],
    "publish": {
      "provider": "github",
      "owner": "Odin94",
      "repo": "Storytellers_Domain"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.entertainment"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}